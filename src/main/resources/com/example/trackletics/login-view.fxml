<VBox prefHeight="554.0" prefWidth="944.0" stylesheets="@application.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.trackletics.LoginController">

  <children>
    <BorderPane prefHeight="554.0" prefWidth="944.0">

      <left>
        <AnchorPane prefHeight="554.0" prefWidth="948.0" BorderPane.alignment="CENTER">

          <children>

            <!-- Sign In / Sign Up toggle -->
            <HBox layoutX="210.0" layoutY="222.0" spacing="0" styleClass="toggle-container" />

            <!-- Input fields -->
            <TextField layoutX="101.0" layoutY="223.0" prefHeight="46.0" prefWidth="397.0" promptText="Email" styleClass="login-border" />
            <PasswordField layoutX="100.0" layoutY="265.0" prefHeight="46.0" prefWidth="400.0" promptText="Password" styleClass="login-border" />

            <Button layoutX="101.0" layoutY="307.0" prefHeight="22.0" prefWidth="297.0" styleClass="profile-button" text="Sign In" textFill="WHITE" />
            <Pane layoutX="239.0" layoutY="8.0" prefHeight="200.0" prefWidth="200.0">
                     <children>
      
                  <Label layoutX="-118.0" layoutY="176.0" prefHeight="23.0" prefWidth="347.0" styleClass="sign-in-text" text="Sign in to continue tracking your health and fitness journey.">
                    <font>
                      <Font size="10.0" />
                    </font>
                  </Label>
                     </children>
            </Pane>
          <ImageView fitHeight="184.0" fitWidth="231.0" layoutX="130.0" layoutY="17.0" pickOnBounds="true" preserveRatio="true" styleClass="logo-shadow">
            <image>
              <Image url="@image/trackletics%20portrait.png" />
            </image>
          </ImageView>
                  <Label layoutX="195.0" layoutY="363.0" prefHeight="23.0" prefWidth="347.0" styleClass="sign-in-text" text="Forgot your password?">
                     <font>
                        <Font size="10.0" />
                     </font>
                  </Label>
                  <Label layoutX="178.0" layoutY="413.0" prefHeight="23.0" prefWidth="347.0" styleClass="sign-in-text" text="Don't have an account? Sign up">
                     <font>
                        <Font size="10.0" />
                     </font>
                  </Label>
          </children>
        </AnchorPane>
      </left>
    </BorderPane>
  </children>
