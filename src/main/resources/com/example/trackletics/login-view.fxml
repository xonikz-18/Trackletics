<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox prefHeight="554.0" prefWidth="944.0" stylesheets="@application.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.trackletics.HelloController">

  <children>
    <BorderPane prefHeight="554.0" prefWidth="944.0">

      <left>
        <AnchorPane prefHeight="554.0" prefWidth="948.0" BorderPane.alignment="CENTER">

          <children>

            <Label layoutX="134.0" layoutY="253.0" prefHeight="23.0" prefWidth="347.0" styleClass="sign-in-text" text="Sign in to continue tracking your health and fitness journey.">
              <font>
                <Font size="13.0" />
              </font>
            </Label>

            <!-- Sign In / Sign Up toggle -->
            <HBox layoutX="210.0" layoutY="222.0" spacing="0" styleClass="toggle-container" />

            <!-- Input fields -->
            <TextField layoutX="107.0" layoutY="297.0" prefHeight="46.0" prefWidth="397.0" promptText="Email" styleClass="primary-border" />
            <PasswordField layoutX="106.0" layoutY="351.0" prefHeight="46.0" prefWidth="400.0" promptText="Password" styleClass="primary-border" />

            <Button layoutX="106.0" layoutY="408.0" prefHeight="36.0" prefWidth="399.0" styleClass="primary-button" text="Sign In" />
            <Pane layoutX="239.0" layoutY="8.0" prefHeight="200.0" prefWidth="200.0">
                     <children>
                <ImageView fitHeight="220.0" fitWidth="266.0" layoutX="-66.0" layoutY="26.0" pickOnBounds="true" preserveRatio="true" styleClass="logo-shadow">
                  <image>
                    <Image url="@image/trackletics%20portrait.png" />
                  </image>
                </ImageView>
                     </children>
            </Pane>
          </children>
        </AnchorPane>
      </left>
    </BorderPane>
  </children>
</VBox>
