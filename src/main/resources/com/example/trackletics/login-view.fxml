<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.trackletics.LoginController">
  <!-- Left side (Logo and Login Form) -->
  <left>
    <VBox alignment="CENTER" prefWidth="400.0" spacing="15.0" BorderPane.alignment="CENTER">
      <padding>
        <Insets bottom="40" left="40" right="40" top="40" />
      </padding>

      <!-- Logo -->
      <ImageView fitHeight="120.0" fitWidth="120.0">
        <image>
          <Image url="@images/logo.png" />
        </image>
      </ImageView>
         <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
            <image>
               <Image url="@image/trackletics%20portrait.png" />
            </image></ImageView>
      <Label style="-fx-font-size: 12px; -fx-text-fill: #6a6a6a;" text="Track. Train. Transform." />

      <!-- Sign In Text -->
      <Text style="-fx-font-size: 11px; -fx-text-fill: #555;" text="Sign in to continue tracking your health and fitness journey" textAlignment="CENTER" wrappingWidth="260" />

      <!-- Email Field -->
      <TextField fx:id="emailField" prefWidth="250" promptText="Email" />

      <!-- Password Field -->
      <PasswordField fx:id="passwordField" prefWidth="250" promptText="Password" />

      <!-- Sign In Button -->
      <Button prefWidth="250" style="-fx-background-color: #b77bbf; -fx-text-fill: white;" text="Sign In" />

      <!-- OR -->
      <HBox alignment="CENTER" spacing="10">
        <Separator prefWidth="80" />
        <Label text="or" />
        <Separator prefWidth="80" />
      </HBox>

      <!-- Google and Facebook Icons -->
      <HBox alignment="CENTER" spacing="15">
        <Button style="-fx-background-color: white; -fx-border-color: #ccc;" text="G" />
        <Button style="-fx-background-color: white; -fx-border-color: #ccc;" text="f" />
      </HBox>

      <!-- Forgot Password -->
      <Hyperlink text="Forgot your password?" />

      <!-- Sign Up -->
      <HBox alignment="CENTER">
        <Label text="Don't have an account?" />
        <Hyperlink text="Sign up" />
      </HBox>
    </VBox>
  </left>

  <!-- Right side (Fitness Image Section) -->
  <right>
    <StackPane prefWidth="450">
      <ImageView fitWidth="450" preserveRatio="true">
        <image>
          <Image url="@images/fitness_equipment.png" />
        </image>
      </ImageView>
    </StackPane>
  </right>
</BorderPane>
